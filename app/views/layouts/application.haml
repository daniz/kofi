!!! 5
%html
	%head
		%title Kofi
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => false
		= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato', media: 'all', 'data-turbolinks-track' => false
		= # stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Raleway', media: 'all', 'data-turbolinks-track' => false
		= stylesheet_link_tag    "//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css", media: "all", "data-turbolinks-track" => true
  
		= javascript_include_tag 'application', 'data-turbolinks-track' => false
		= include_gon
		= csrf_meta_tags

	%body
		%header
			.header-session
				- if user_signed_in? 
					Logged in as
					%b= current_user.email
					|
					= link_to 'Edit profile', edit_user_registration_path
					|
					= link_to 'Logout', destroy_user_session_path, method: :delete
				- else
					= link_to 'Sign up', new_user_registration_path
					|
					= link_to 'Login', new_user_session_path

			.header-logo 
				%span.header-logo-tax Tax
				%span.header-logo-pass Pass

			%ul.header-nav
				%li#header-nav-home
					= link_to 'Home', root_path
				%li#header-nav-cpa-dash
					= link_to 'CPAs', dashboard_cpa_path
				%li#header-nav-tax
					= link_to 'Tax Return', tax_return_index_path
				%li#header-nav-dash
					= link_to 'Dashboard', dashboard_index_path
				%li#header-nav-support
					= link_to 'Support'
				%li#header-nav-about
					= link_to 'About us'

		.jumbo
			= yield

	%footer &copy; TaxPass 2014
